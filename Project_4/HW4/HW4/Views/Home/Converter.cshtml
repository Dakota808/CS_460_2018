@{
    ViewBag.Title = "Converter";
}
<h2>@ViewBag.Title.</h2>


<p>Input your distance here:</p>
<div class="row">
    <!--This is where the users input the distance which only takes numbers as well as decimals-->
        <form action="">
            <div class="col-md-6 form-group">
                <label for="input">Miles:</label>
                <input type="number" class="layout-form" id="input" step=".01" name="mile" placeholder="Type your distance" required />
            </div>
    <!--The radio buttons are the differnet metric units that will be used to calculate the input value that a user types-->
            <!--As well as where they will submit to run the calculation and get back the result of that request-->
            <div class="col-md-6 form-group">
                <h3>Metric Units</h3><hr>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="metric-unit" id="mm" value="millimeters" required/>
                    <label class="form-check-label" for="u1">Millimeters</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="metric-unit" id="cm" value="centimeters" required/>
                    <label class="form-check-label" for="u2">Centimeters</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="metric-unit" id="m" value="meters" required/>
                    <label class="form-check-label" for="u3">Meters</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="metric-unit" id="km" value="kilometers" required/>
                    <label class="form-check-label" for="u4">Kilometers</label>
                </div>
                <button class="btn btn-primary" type="submit">Convert</button>
            </div>

        </form>
    @if (ViewBag.result)
    {
        <h2>@ViewBag.Message</h2>

}


</div>