@{
    ViewBag.Title = "Color Maker";
}
<h2>Building new color</h2>

<h3>Input the color in hexidecimal format: #eeffdd</h3> <br/>


@using (Html.BeginForm("Color_Maker", "Color", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("color1", "Color Maker")
        @Html.TextBox("Color1", null, htmlAttributes: new { @class = "form-control", pattern ="#[0-9A-Fa-f]{3,6}", type = "text" ,placeholder = "#eeffdd", required = "required"})
    </div>

    <div class="form-group">
        @Html.Label("color2", "Color Maker")
        @Html.TextBox("Color2", null, htmlAttributes: new { @class = "form-control", pattern = "#[0-9A-Fa-f]{3,6}", type = "text", placeholder = "#eeffdd", required = "required"})  
    </div>

    <br/>
    <button type="submit" value="" class="btn btn-primary"></button>
}

